@model IEnumerable<Category>
@{
    //ViewData["Title"] = "Index";
}

<!--Adding containter to add header-->

<div class="container p-6">
    <div class="row pt-4">
        <div class="col">
            <h2 class="text-primary"> Category List</h2>
        </div>

        <div class="col text-end">
            <a asp-asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-lg"></i>   &nbsp;  Create
            </a>
        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <!--group table header-->
            <tr>
                <th>
                    Category Name
                </th>  <!--table cell header-->
                <th>
                    Display Id
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>

                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn btn-group" role="group">
                           <a asp-controller="Category" asp-action="Edit" asp-route-id=@obj.ID class="btn btn-primary border-danger "> <i class="bi bi-pencil-square"></i>Edit</a>
                           <a asp-controller="Category" asp-action="Delete" asp-route-id=@obj.ID class="btn btn-danger border-primary "> <i class="bi bi-pencil-square"></i>Remove</a>

                        </div>
                    </td>
                </tr>

            }
        </tbody>


    </table>

</div>

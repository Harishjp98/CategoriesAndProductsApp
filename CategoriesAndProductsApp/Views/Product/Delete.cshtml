@model Products

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden /> 

    <div class="border p-3 my-5">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label mt-4"></label>
            <input asp-for="Title" disabled class="form-control"  placeholder="Enter name" />


        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label mt-2"></label>
            <input asp-for="Description" disabled class="form-control"  placeholder="Enter display Order" />


        </div>
        
        <div class="mb-3">
            <label asp-for="Price" class="form-label mt-2"></label>
            <input asp-for="Price" disabled class="form-control"  placeholder="Enter display Order" />


        </div>
       
        <div class="mb-3">
            <label asp-for="Category" class="form-label mt-2"></label>
            <input asp-for="Category" disabled class="form-control"  placeholder="Enter display Order" />


        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

    </div>
</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

